# Importo la libreria numpy
import numpy as np 

# Inizializzo la funzione "mat_normalizzata"
def mat_normalizzata(matrice):
    # Calcolo la media e la std della matrice per normalizzarla e restituirla
    media = np.mean(matrice)
    deviazione_std = np.std(matrice)
    matrice_normalizzata = (matrice - media) / deviazione_std
    return matrice_normalizzata

# Testo la funzione con una matrice random 6x10 con media = 5 e std = 2 
matrice = np.random.normal(loc=5, scale=2, size=(6, 10))

# Per chiarezza arrotondo i valori della matrice a 5 decimali
matrice_normalizzata = mat_normalizzata(matrice)

# Mostro a schermo tutti i valori e arrotondo la media e la std a 5 decimali
print("\nLa matrice originale:\n", round(matrice, 5))
print("\nLa matrice normalizzata:\n", round(matrice_normalizzata, 5))
print("\nLa media della matrice normalizzata: ", round(np.mean(matrice_normalizzata), 5))
print("\nLa deviazione standard della matrice normalizzata: ", round(np.std(matrice_normalizzata), 5))